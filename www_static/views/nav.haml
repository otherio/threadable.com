.navbar.navbar-fixed-top.navbar-inverse
  .navbar-inner

    %a.brand{href:"/"} multify

    %ul.nav.pull-right

      <% if (loggedIn) { %>
      %li.dropdown
        %a.dropdown-toggle#account-menu{"data-toggle" => "dropdown", :href => ""}
          <%= current_user.get('name') %>
          %i.icon-wrench.icon-white
          %b.caret
        %ul.dropdown-menu
          %li.nav-header Account
          %li
            %a{:href => ""} Profile
          %li.divider
          %li
            %a.logout{:href => ""} Sign out
      <% } else { %>
      %li.dropdown
        %a.dropdown-toggle#login-menu{"data-toggle" => "dropdown", :href => ""}
          Sign in
          %b.caret
        %ul.dropdown-menu
          %form.login
            %fieldset.textbox
              %label.username
                %input{type: "text", name: "email", placeholder: "Email"}
              %label.password
                %input{type: "password", name: "password", placeholder: "Password"}
            %fieldset.submit
              %input.btn.pull-right.login-submit{type:"submit", value: "Sign in"}
      <% } %>
