.uk-container-center.uk-width-large-1-3.uk-width-medium-1-2
  %h2 Covered
  .well-when-not-small
    %h2 Reset your password

    = simple_form_for current_user, url: current_url, method: 'patch', html: {class: 'uk-form uk-form-stacked'} do |f|
      %fieldset
        .uk-form-row
          = f.input :password, :autofocus => true, placeholder: 'Password',              :required => true, input_html: {class: 'uk-width-1-1 uk-form-large'}, label: false
        .uk-form-row
          = f.input :password_confirmation,        placeholder: 'Password confirmation', :required => true, input_html: {class: 'uk-width-1-1 uk-form-large'}, label: false
        .uk-form-row
          = f.submit 'Update', class: 'uk-button uk-button-primary uk-button-large'
