%ol
  - items.each do |type, item|
    - case type
    - when :message
      %li.message
        = render_widget(:message, item)
    - when :event
      %li.event
        %span
          %strong= item.user.name
          created this task
        %span.pull-right
          = timeago item.created_at

= render_widget :new_conversation_message, conversation, from: from
