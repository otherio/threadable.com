.navbar.navbar-inverse.navbar-static-top
  .navbar-inner
    .navbar-content

      - if current_organization.present? && current_organization.persisted?
        = render_widget :invite_modal, current_organization
        = render_widget :compose_conversation_message_modal, current_organization
        = link_to current_organization.email_address, organization_conversations_path(current_organization), class: 'brand'
        = link_to organization_members_path(current_organization), class: "btn btn-text-thin" do
          %i.icon-group
          Members
        %a(href="" role="button" class="btn btn-text-thin" data-toggle="modal" data-target=".invite_modal")
          %i.icon-plus
          Add
        %a{href: "", role: "button", class: "btn btn-text-thin", data: {toggle: "modal", target: ".compose_conversation_message_modal"}}
          %i.icon-envelope
          Compose

      - else
        = link_to "Covered", covered_link_url, class: 'brand'

      - if current_user.present?
        %ul.nav.pull-right
          %li.organizations.dropdown
            - if organizations.present?
              %a.dropdown-toggle{"data-toggle" => "dropdown", href:""}
                Organizations
                .caret
              %ul.dropdown-menu
                - organizations.each do |organization|
                  %li= link_to organization.name, organization_conversations_path(organization)
                %li.divider
                %li= link_to 'All Organizations', root_path

          - if current_user.admin?
            %li= link_to 'Admin', admin_path

          %li.current_user.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => ""}
              = current_user.name
              .caret
            %ul.dropdown-menu
              %li= link_to 'Profile', profile_path
              %li.divider
              %li= link_to 'Sign out', sign_out_path

      - else
        %ul.nav.pull-right
          %li= link_to 'Sign in', sign_in_path
          - if signup_enabled?
            %li= link_to 'Sign up', sign_up_path


