.navbar.navbar-inverse.navbar-static-top
  .navbar-inner
    .navbar-content

      - if current_project.present? && current_project.persisted?
        = render_widget :invite_modal, current_project
        = render_widget :compose_conversation_message_modal, current_project
        = link_to current_project.email_address, project_conversations_path(current_project), class: 'brand'
        = link_to project_members_path(current_project), class: "btn btn-text-thin" do
          %i.icon-group
          Members
        %a(href="" role="button" class="btn btn-text-thin" data-toggle="modal" data-target=".invite_modal")
          %i.icon-plus
          Add
        %a{href: "", role: "button", class: "btn btn-text-thin", data: {toggle: "modal", target: ".compose_conversation_message_modal"}}
          %i.icon-envelope
          Compose

      - else
        = link_to "Covered", covered_link_url, class: 'brand'

      - if current_user.present?
        %ul.nav.pull-right
          %li.projects.dropdown
            - if projects.present?
              %a.dropdown-toggle{"data-toggle" => "dropdown", href:""}
                Projects
                .caret
              %ul.dropdown-menu
                - projects.each do |project|
                  %li= link_to project.name, project_conversations_path(project)
                %li.divider
                %li= link_to 'All Projects', root_path

          - if current_user.admin?
            %li= link_to 'Admin', admin_path

          %li.current_user.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => ""}
              = current_user.name
              .caret
            %ul.dropdown-menu
              %li= link_to 'Profile', profile_path
              %li.divider
              %li= link_to 'Sign out', sign_out_path

      - else
        %ul.nav.pull-right
          %li= link_to 'Sign in', sign_in_path
          - if signup_enabled?
            %li= link_to 'Sign up', sign_up_path


