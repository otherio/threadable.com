.navbar.navbar-inverse.navbar-static-top
  .navbar-inner
    .navbar-content

      - if current_project.present?
        = render_widget :invite_modal, current_project
        = link_to current_project.name, project_conversations_url(current_project), class: 'brand'
        %a(href="" role="button" class="btn btn-text-thin" data-toggle="modal" data-target=".invite_modal")
          %i.icon-plus
          Invite
        = link_to 'Members', project_members_url(current_project)

      - else
        = link_to "Covered", covered_link_url, class: 'brand'

      - if current_user.present?
        %ul.nav.pull-right
          %li.projects.dropdown
            - if projects.present?
              %a.dropdown-toggle{"data-toggle" => "dropdown", href:""}
                Projects
                .caret
              %ul.dropdown-menu
                - projects.each do |project|
                  %li= link_to project.name, project_conversations_url(project)
                %li.divider
                %li= link_to 'All Projects', root_url

          %li.current_user.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => ""}
              = current_user.name
              .caret
            %ul.dropdown-menu
              %li= link_to 'Profile', user_url(current_user)
              %li.divider
              %li= link_to 'Logout', destroy_user_session_url, :method => :delete

      - else
        %ul.nav.pull-right
          %li= link_to 'Login', new_user_session_url


