%ul.inline.middle-aligned
  %li
    %h2 Conversations
  %li
    = link_to "Compose", new_project_conversation_url(project), class: 'btn btn-text-thin'

%ul.conversations
  - conversations.each do |conversation|
    %li.conversation{title: conversation.subject, "data-conversation-id" => conversation.id}
      = link_to project_conversation_path(project, conversation) do
        (#{conversation.messages.count}) #{conversation.subject}
