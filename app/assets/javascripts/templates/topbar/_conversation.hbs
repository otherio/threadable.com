<div class="left-nav">
  <a href="" {{action 'focusConversations'}} class="back-button">
    <i class="uk-icon-chevron-left"><span class="sr-only">Back</span></i>
  </a>

</div>
<div class="right-nav">
  {{#if conversation.task}}
    {{#if conversation.done}}
      <a href="" {{action 'toggleComplete'}}><i class="uk-icon-check-square"><span class="sr-only">Undone</span></i></a>
    {{else}}
      <a href="" {{action 'toggleComplete'}}><i class="uk-icon-check"><span class="sr-only">Done</span></i></a>
    {{/if}}
    <a href="" {{action 'toggleDoerSelector'}}><i class="uk-icon-user"><span class="sr-only">Doers</span></i></a>
  {{/if}}

  {{#if conversation}}
    {{#link-to conversationDetailRoute organizationSlug groupSlug conversation.slug}}
      <i class="uk-icon-info-circle"><span class="sr-only">Recipients</span></i>
    {{/link-to}}

    {{#if conversation.currentUserIsInGroups}}
      <a href="" {{action 'toggleMuted'}}>
        {{#if conversation.isMuted}}
          <i class="uk-icon-volume-up"><span class="sr-only">Unmute</span></i>
        {{else}}
          <i class="uk-icon-volume-down"><span class="sr-only">Mute</span></i>
        {{/if}}
      </a>
    {{else}}
      <a href="" {{action 'toggleFollowed'}}>
        {{#if conversation.isFollowed}}
          <i class="uk-icon-minus-square-o"><span class="sr-only">Unfollow</span></i>
        {{else}}
          <i class="uk-icon-plus-square-o"><span class="sr-only">Follow</span></i>
        {{/if}}
      </a>
    {{/if}}

    {{#if conversation.isTrashed}}
      <a href="" {{action 'unTrash'}}>
        <i class="uk-icon-undo"><span class="sr-only">Undelete</span></i>
      </a>
    {{else}}
      <a href="" {{action 'trash'}}>
        <i class="uk-icon-trash-o"><span class="sr-only">Delete</span></i>
      </a>
    {{/if}}
  {{/if}}
</div>
