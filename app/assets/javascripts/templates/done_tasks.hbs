{{#if loading}}
  {{partial 'lines_spinner'}}
{{else}}
  {{#unless fullyLoaded}}
    <a href="" class="load-more-button" {{action loadMore}}>Load More</a>
  {{/unless}}
{{/if}}

<ul class="uk-list">
  {{#each task in controller}}
    {{partial 'tasks/list/member'}}
  {{else}}
    {{#unless loading}}
      <li class="empty-list"><h4>No Done Tasks</h4></li>
    {{/unless}}
  {{/each}}
</ul>

<div class="list-divider">
  <i class="uk-icon-arrow-circle-o-up"></i>
  Done Tasks
</div>
