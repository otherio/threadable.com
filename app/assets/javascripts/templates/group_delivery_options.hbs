<div class="group-settings scrollable">
  <div>
    <form class="uk-form">

      <h3 class="uk-text-bold">Email Delivery Options</h3>
      {{#if error}}
        <h3>Error: {{error}}</h3>
      {{/if}}

      For <b>{{name}}</b> in group <b>{{group.name}}</b>

      <fieldset>
        <div class="uk-form-row">
          <label class="uk-form-label input-label">
            Delivery method:
          </label>
          <div class="uk-form-controls input-field">
            {{view Ember.Select disabled=notEditable content=deliveryMethods optionLabelPath="content.prettyName" optionValuePath="content.method" value=deliveryMethod}}
          </div>

          <div class="notice">
            <i class="uk-icon-arrow-circle-right"></i>
            {{#if getsEachMessage}}
              You will receive each message in this group immediately.
            {{/if}}
            {{#if getsFirstMessage}}
              You will receive the first message of every conversation immediately,
              and you can <b>follow &amp; sync</b> the conversations you like.
            {{/if}}
            {{#if getsInSummary}}
              You will receive a summary of this group's conversations once per day,
              and you can <b>follow &amp; sync</b> the conversations you like.
            {{/if}}
          </div>
        </div>
      </fieldset>
    </form>

  </div>
</div>
