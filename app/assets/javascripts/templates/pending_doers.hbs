{{#each doer in controller}}
  {{#if doer.isChanged}}
    <div class="pending-doer">
      <strong>
        {{#if doer.isAdded}}
          +{{doer.name}}
        {{else}}
          -{{doer.name}}
        {{/if}}
      </strong>
      <span class="subtitle">
        as a doer
      </span>
    </div>
  {{/if}}
{{/each}}
