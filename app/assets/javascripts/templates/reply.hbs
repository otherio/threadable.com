{{outlet pendingDoers}}
{{#if error}}
  <h2>Error: {{error}}</h2>
{{/if}}
<form class="uk-form-horizontal" {{action sendMessage on='submit'}}>
  <fieldset>
    {{view Ember.ContenteditableView valueBinding="bodyHtml" editable=true}}
    <div class="controls">
      <input type="submit" class="uk-button uk-button-primary" {{bind-attr disabled="emptyAction" value="buttonText"}}></input>
    </div>
  </fieldset>
</form>
