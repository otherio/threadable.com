<ul class="uk-list">
  {{#each task in controller}}
    {{partial 'tasks/list/member'}}
  {{else}}
    {{#unless loading}}
      <li class="empty-list"><h4>No Not Done Tasks</h4></li>
    {{/unless}}
  {{/each}}
</ul>

{{#if loading}}
  {{partial 'lines_spinner'}}
{{else}}
  {{#unless fullyLoaded}}
    <a href="" class="load-more-button" {{action loadMore}}>Load More</a>
  {{/unless}}
{{/if}}
