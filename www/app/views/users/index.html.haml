%h1 Listing users

%table
  %tr
    %th Name
    %th Slug
    %th Email
    %th Password
    %th
    %th
    %th

  - @users.each do |user|
    %tr
      %td= user.name
      %td= user.slug
      %td= user.email
      %td= user.password
      %td= link_to 'Show', user_path(user.slug)
      %td= link_to 'Edit', edit_user_path(user.slug)
      %td= link_to 'Destroy', user_path(user.slug), method: :delete, data: { confirm: 'Are you sure?' }

%br

