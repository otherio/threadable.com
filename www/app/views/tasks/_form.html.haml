= form_for @task, :as => :task, :url => @task.new_record? ? project_tasks_path(@project, @task) : project_task_path(@project, @task) do |f|
  - if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :done
    = f.check_box :done
  .field
    = f.label :due_date
    = f.datetime_select :due_date
  .actions
    = f.submit 'Save'
